<div class="add-user">
  <form>
    <div class="form-group">
      <label for="fname">First Name:</label>
      {{input type=text class="form-control" value=newUser.firstname}}
    </div>
    <div class="form-group">
      <label for="lname">Last Name:</label>
      {{input type=text class="form-control" value=newUser.lastname}}
    </div>
    <div class="form-group">
      <label for="lname">Phone Number:</label>
      {{input type=text class="form-control" value=newUser.phone}}
    </div>
    <div class="form-group">
      <label for="email">Email address:</label>
      {{input type=text class="form-control" value=newUser.email}} {{#if email}}YO {{/if}}
    </div>
    <div class="checkbox">
      <label>{{input type="checkbox" checked=newUser.status}}Status</label>
    </div>
    <button type="submit" class="btn btn-default" {{action 'addUser'}}>Submit</button>
  </form>

</div>
