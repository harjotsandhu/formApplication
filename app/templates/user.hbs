<div class="row">
  <div class="col-md-2">
    <div class="left-panel">
      {{#link-to 'users'}}<div class="panel-items" {{action 'backToDetails'}}>List Contacts</div>{{/link-to}}
      <div class="panel-items" {{action 'updateUser' model}}>Update</div>
    </div>
  </div>
  <div class="col-md-10 user">
    <div class="user-detail">
      <div class="icon">{{fa-icon "fa-user-circle"}}</div>
      <div class="user-from">
        <form>
          <div class="form-group">
            <label for="fname">First Name:</label>
            {{input type=text class="form-control" value=model.firstname}}
          </div>
          <div class="form-group">
            <label for="lname">Last Name:</label>
            {{input type=text class="form-control" value=model.lastname}}
          </div>
          <div class="form-group">
            <label for="lname">Phone Number:</label>
            {{input type=text class="form-control" value=model.phone}}
          </div>
          <div class="form-group">
            <label for="email">Email address:</label>
            {{input type=text class="form-control" value=model.email}}
          </div>
          <div class="checkbox">
            <label>{{input type="checkbox" checked=model.status}}Status</label>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
